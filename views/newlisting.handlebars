<section class="new-listing">
  <form>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea>

    <label for="startingPrice">Starting Price:</label>
    <input type="number" id="starting-price" name="startingPrice" required>

    <label for="endDate">End Date:</label>
    <input type="date" id="end-date" name="endDate" required>

    <button type="submit" id="create-listing-btn">Create Listing</button>
  </form>
</section>

<script src="js/create-listing-btn.js"></script>
<script src="/js/minimum-date.js"></script>
<section class="container">
  <h3 class="auction-name">Update Auction</h3>
  <form action="/auctions/{{individualAuction.id}}" method="PUT">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{individualAuction.title}}" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required>{{individualAuction.description}}</textarea>

    <label for="starting-price">Starting Price:</label>
    <input type="number" id="starting-price" name="startingPrice" value="{{individualAuction.startingPrice}}" required>

    <label for="end-date">End Date:</label>
    <input type="date" id="end-date" name="endDate" value="{{individualAuction.endDate}}" required>

    <button type="submit" id="update-listing-btn">Update Listing</button>
  </form>
</section>
<script src="/js/minimum-date.js"></script>
<script src="/js/update-listing-btn.js"></script>
<script>const auctionId = {{individualAuction.id}};</script>